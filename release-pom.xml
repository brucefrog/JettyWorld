<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <groupId>bruce.jfrog</groupId>
  <artifactId>JettyParent</artifactId>
  <version>1.3.2</version>
  <packaging>pom</packaging>
  <modules>
    <module>java</module>
    <module>docker</module>
  </modules>
  <scm>
    <connection>scm:git:git://github.com/brucefrog/JettyWorld.git</connection>
    <developerConnection>scm:git:git@github.com:brucefrog/JettyWorld.git</developerConnection>
    <url>https://github.com/brucefrog/JettyWorld</url>
  </scm>
  <distributionManagement>
    <repository>
      <id>central</id>
      <name>bruce-hart2-releases</name>
      <url>http://35.186.255.251/artifactory/libs-release-local</url>
    </repository>
    <snapshotRepository>
      <id>snapshots</id>
      <name>Bruce Onboarding Snapshots</name>
      <url>http://35.186.255.251/artifactory/libs-snapshot-local</url>
    </snapshotRepository>
  </distributionManagement>
  <repositories>
    <repository>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <id>central</id>
      <name>libs-release-local</name>
      <url>http://35.186.255.251/artifactory/libs-release-local</url>
    </repository>
    <repository>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
      <id>snapshots</id>
      <name>libs-snapshot</name>
      <url>http://35.186.255.251/artifactory/libs-snapshot</url>
    </repository>
  </repositories>
  <pluginRepositories>
    <pluginRepository>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <id>central</id>
      <name>libs-release-local</name>
      <url>http://35.186.255.251/artifactory/libs-release-local</url>
    </pluginRepository>
    <pluginRepository>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
      <id>snapshots</id>
      <name>libs-snapshot</name>
      <url>http://35.186.255.251/artifactory/libs-snapshot</url>
    </pluginRepository>
  </pluginRepositories>
  <build>
    <sourceDirectory>src/main/java</sourceDirectory>
    <scriptSourceDirectory>/var/lib/jenkins/workspace/JavaHello/src/main/scripts</scriptSourceDirectory>
    <testSourceDirectory>src/test/java</testSourceDirectory>
    <outputDirectory>bin/classes</outputDirectory>
    <testOutputDirectory>bin/test-classes</testOutputDirectory>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
      </resource>
    </resources>
    <testResources>
      <testResource>
        <directory>src/test/resources</directory>
      </testResource>
    </testResources>
    <directory>bin</directory>
    <finalName>JettyParent-1.3.2</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-dependency-plugin</artifactId>
        <version>3.0.2</version>
        <extensions>false</extensions>
        <executions>
          <execution>
            <id>copy-dependencies</id>
            <phase>package</phase>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>1.6.0</version>
        <extensions>false</extensions>
        <executions>
          <execution>
            <goals>
              <goal>exec</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <executable>java</executable>
          <arguments>
            <argument>-classpath</argument>
            <classpath />
            <argument>com.jfrog.sample.Hello</argument>
          </arguments>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-release-plugin</artifactId>
        <version>2.5.3</version>
        <extensions>false</extensions>
        <dependencies>
          <dependency>
            <groupId>org.apache.maven.scm</groupId>
            <artifactId>maven-scm-provider-gitexe</artifactId>
            <version>1.9.2</version>
          </dependency>
        </dependencies>
        <configuration>
          <preparationGoals>package</preparationGoals>
          <releaseProfiles>central</releaseProfiles>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <reporting>
    <outputDirectory>bin/site</outputDirectory>
  </reporting>
</project>
